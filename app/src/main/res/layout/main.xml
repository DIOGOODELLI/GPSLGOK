    <EditText
        android:id="@+id/latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Latitude" />


    <EditText
        android:id="@+id/acuracy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PrecisÃ£o" />

    <Button
        android:id="@+id/buscar"
        android:layout_width="100dp"
